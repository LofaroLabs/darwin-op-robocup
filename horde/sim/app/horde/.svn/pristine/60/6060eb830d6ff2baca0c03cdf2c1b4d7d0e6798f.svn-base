package sim.app.horde.scenarios.robot.darwin.behaviors;

import sim.app.horde.Horde;
import sim.app.horde.agent.Agent;
import sim.app.horde.behaviors.Behavior;
import sim.app.horde.behaviors.Macro;
import sim.app.horde.scenarios.robot.darwin.agent.DarwinAgent;

/**
 *
 * @author drew
 */
public class MoveTheta extends Behavior{
    
    
    private static final long serialVersionUID = 1L;

    
    public static String getType() { return sim.app.horde.agent.SimAgent.TYPE_SIMAGENT; }
    
    public MoveTheta() {
        name = "MoveTheta";
        }
    
    long lastSent = 0;
    @Override
    public void start(Agent agent, Macro parent, Horde horde) {
        super.start(agent, parent, horde);
        
        // THIS IS HORIBLE! TODO make it so that move theta is a one time action
            
        //if (System.currentTimeMillis() - lastSent > 200 || lastSent == 0) {
        DarwinAgent da = (DarwinAgent) agent;
        
        if (!(da.prevBehavior instanceof MoveTheta)) {
            da.prevBehavior = this;
            ((DarwinAgent) agent).sendMotion(Motions.MOVE_THETA);
            lastSent = System.currentTimeMillis();
        }
        
        }
    
    
    }
