#! /bin/sh

KERNEL=`uname -r`


# Kill all processes to reset player
killall -q naoqi-bin naoqi hal espeak lua luajit luajit2 screen
#

# kill all screen log
rm -f screenlog*
rm -f /dev/shm/*

SCREEN_FLAGS="-dm -s /usr/bin/bash -S"

reset_wb(){
  uvcdynctrl -d video0 -s 'White Balance Temperature, Auto' -- 1
  echo "Reset WB. Make Sure Robot Facing Field"
  sleep 2;
  uvcdynctrl -d video0 -s 'White Balance Temperature, Auto' -- 0
  sleep 1;
}

run_dcm_vcm(){
  echo "Starting DCM..."
  cd $PLAYER_DIR
  echo "screen $SCREEN_FLAGS dcm $LUA_COM run_dcm.lua"
  echo `screen $SCREEN_FLAGS dcm $LUA_COM run_dcm.lua`
  # Allow DCM some time to start
  sleep 1
  
  echo "Starting Cognition..."
  cd $PLAYER_DIR
  echo `screen $SCREEN_FLAGS cognition $LUA_COM run_cognition.lua`
  # Allow Cognition some time to start
  sleep 3
}

run_nao_vcm(){
  # echo "Starting Naoqi..."
  # cd $PLAYER_DIR
  # screen $SCREEN_FLAGS nao_qi /usr/bin/naoqi 
  # Allow naoqi some time to start
  # sleep 3
  
  echo "Starting Cognition..."
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS cognition $LUA_COM run_cognition.lua
  # Allow Cognition some time to start
  sleep 3
}

run_player(){
  run_dcm_vcm
 
  echo "Starting Player..."
  cd $PLAYER_DIR
  echo `screen $SCREEN_FLAGS player $LUA_COM run_main_op.lua`
  
  echo "Rock and Roll!"
  screen -ls
}

run_obplay(){
  run_dcm_vcm
 
  echo "Starting Ob Map"
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS occ $LUA_COM run_occmap.lua
  sleep 1

  echo "Starting Player..."
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS player $LUA_COM run_main_op.lua
  
  echo "Rock and Roll!"
  screen -ls
}

run_demo(){
  echo "Starting DCM..."
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS dcm $LUA_COM run_dcm.lua
  # Allow DCM some time to start
  sleep 1
  
  echo "Starting Cognition..."
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS cognition $LUA_COM run_cognition.lua
  # Allow Cognition some time to start
  sleep 3
 
  echo "Starting Player..."
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS player $LUA_COM run_demo.lua
  
  echo "Rock and Roll!"
}

run_demo_nao(){
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS naohal /usr/bin/hal
  sleep 3
  screen $SCREEN_FLAGS naoqi /usr/bin/naoqi
  sleep 4

  echo "Starting Nao Cognition..."
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS cognition $LUA_COM run_cognition.lua
  # Allow Cognition some time to start
  sleep 4
}

run_visiontest(){
  run_dcm_vcm
  echo "Starting Test Vision..."
  cd $PLAYER_DIR
  screen -m -S test $LUA_COM Test/test_vision.lua
  #
  echo "Rock and Roll!"
  screen -ls
}

run_obstacle(){
  run_dcm_vcm
  echo "Starting OccMap Proc..."
  cd $PLAYER_DIR
  screen $SCREEN_FLAGS occ $LUA_COM run_occmap.lua
  ## Allow Cognition some time to start
  sleep 1
  #
  echo "Starting Test Vision..."
  cd $PLAYER_DIR
  screen -m -S test $LUA_COM Test/test_vision.lua
  #
  echo "Rock and Roll!"
  screen -ls
}

run_bias(){
  echo "Starting DCM..."
  cd $PLAYER_DIR
  screen -dm  -S dcm $LUA_COM run_dcm.lua
  # Allow DCM some time to start
  sleep 1
  
  echo "Starting Setup..."
  cd $PLAYER_DIR
  screen -m -S bias $LUA_COM run_setup.lua

}

run_pushtest(){
  echo "Starting DCM..."
  cd $PLAYER_DIR
  screen -dm -S dcm $LUA_COM run_dcm.lua
  # Allow DCM some time to start
  sleep 1
  
  echo "Starting Push Test.."
  cd $PLAYER_DIR
  screen -m -S bias $LUA_COM Test/test_push.lua
}

run_roletest(){
  run_dcm_vcm
  echo "Starting Role Testing..."
  cd $PLAYER_DIR
  screen -m -S test $LUA_COM Test/test_role.lua
  #
  echo "Rock and Roll!"
}

run_nao_vision(){
  run_nao_vcm
  echo "Starting Vision Testing..."
  cd $PLAYER_DIR
  screen -m -S player $LUA_COM test_vision.lua
  
  echo "Rock and Roll!"
}

run_main_nao(){
	cd $PLAYER_DIR
	screen $SCREEN_FLAGS naohal /usr/bin/hal
	sleep 3
	screen $SCREEN_FLAGS naoqi /usr/bin/naoqi
	sleep 4

	echo "Starting Nao Cognition..."
	cd $PLAYER_DIR
	screen $SCREEN_FLAGS cognition $LUA_COM run_cognition.lua
	# Allow cognition some time to start
	sleep 4

	echo "Starting Main..."
	cd $PLAYER_DIR
	screen $SCREEN_FLAGS main $LUA_COM run_main.lua
	sleep 4
}

case "$KERNEL" in
        *aldebaran*) 
                PLAYER_DIR=/home/nao/UPennDev/Player
                LUA_COM=/usr/bin/luajit;;
        *)
                PLAYER_DIR=/home/darwin/UPennDev/Player
                LUA_COM=/usr/bin/luajit;;
esac

case "$1" in
  '')
    echo "Start Player Mode"
    run_player;;
	'game')
		echo "Starting Game Mode"
		run_main_nao;;
  'nao')
    echo "start nao"
    run_demo_nao;;
  'demo')
    echo "Start Demo Mode"
    run_demo;;
  'visiontest')
    echo "Start Vision Test Mode"
    run_visiontest;;
  'pushtest')
    echo "Start Push Test Mode"
    run_pushtest;;
  'bias')
    echo "Start Bias Setup Mode"
    run_bias;;
  'roletest')
    echo "Start Role Testing Mode"
    run_roletest;;
  'obstacle')
    echo "Start Obstacle Testing Mode"
    run_obstacle;;
  'obstacleplay')
    echo "Start Player with Obstacle"
    run_obplay;;
  'wbreset')
    echo "Reset White Balance"
    reset_wb;;
  'nao_vision')
    echo "Run Vision code for NaoV4"
    run_nao_vision;;
  'help')
    echo "[No Argu](s)     -- Player Mode"
    echo "[obstacleplay](sob) -- Player Mode with Obstacle"
    echo "[Demo](sd)       -- Demo Mode"
    echo "[pushtest](sp)       -- Push Recovery Demo Mode"
    echo "[visiontest](sv) -- Vision Debug Mode"
    echo "[bias](sb)       -- Bias Setup Mode"
    echo "[roletest](sr)   -- Role Testing Mode"
    echo "[obstacle](so)   -- Role obstacle Mode"
    echo "[wbreset](sw)   -- Reset WB Mode"
    echo "[nao_vision](sn)   -- Test Vision for Nao"
esac
